<div class="container">
  <% flash.each do |name, msg| %>
    <div class="<%= name == "notice" ? "alert alert-success alert-dismissible fade show" : "alert alert-danger alert-dismissible fade show" %>"" role="alert">
      <%= msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %> 
</div> 